<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Catch{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}">
    <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/jquery/jquery-3.5.1.slim.min.js') }}"></script>
    <script src="{{ asset('assets/npm/popper.min.js') }}"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">catch</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if app.request.attributes.get('_route') == 'csv-upload' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('csv-upload') }}">Upload CSV</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'csv-view' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('csv-view') }}">View CSV</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('csv-api-index') }}">CSV API</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</body>
</html>